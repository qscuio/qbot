# Telegram Bot
BOT_TOKEN=your_bot_token_from_botfather
BOT_SECRET=your_random_webhook_secret

# Webhook URL (your public domain)
WEBHOOK_URL=https://bot.yourdomain.com

# Port (change if 3000 is in use)
BOT_PORT=3000

# AI Provider API Keys (at least one required)
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key
GROQ_API_KEY=your_groq_api_key

# Access Control (optional, comma-separated user IDs)
ALLOWED_USERS=

# Notes Export (optional, git repo for /export command)
NOTES_REPO=git@github.com:username/notes.git

# Database (set automatically by docker-compose)
# DATABASE_URL=postgresql://qbot:qbot@postgres:5432/qbot

# Redis (set automatically by docker-compose)
# REDIS_URL=redis://redis:6379
